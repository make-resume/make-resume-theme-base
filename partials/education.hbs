{{#if resume.education}}
{{#>section title=(sectionTitle resume "education" "Education")}}
	{{#each resume.education}}
	<div class="mb-4">
		<div class="columns is-vcentered is-gapless m-0">
			<h5 class="column">
				<span>
				{{this.studyType}}
				{{#if this.area}}
				<span>({{this.area}})</span>
				{{/if}}
				</span> ─
				<span class="is-italic">{{this.institution}}</span>
			</h5>
			<h6 class="column is-narrow">
				{{this.startDate}} ─ {{this.endDate}}
			</h6>
		</div>
		{{#if this.gpa}}
		<div>
			<strong>{{this.gpa}}</strong>
		</div>
		{{/if}}
		{{#if this.courses}}
		<ul>
			{{#each this.courses}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
		{{/if}}
	</div>
	{{/each}}
{{/section}}
{{/if}}