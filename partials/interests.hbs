{{#if resume.interests}}
{{#>section title=(sectionTitle resume "interests" "Interests")}}
	{{#each resume.interests}}
	<div class="columns is-multiline is-gapless mb-2">
		<div class="column is-4">
			<h5 class="m-0">{{this.name}}</h5>
		</div>
		{{#if this.keywords}}
		<div class="column is-8">
			<ul class="items">
				{{#each this.keywords}}
				<li>{{this}}</li>
				{{/each}}
			</ul>
		</div>
		{{/if}}
	</div>
	{{/each}}
{{/section}}
{{/if}}